<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.course">
    <select id="getUserCount" resultType="Integer">
        select count(*) from t_user;
    </select>
    
    <insert id="addUser" parameterType="com.course.model.User">
        insert into t_user (name,age,sex,phone_number,create_time,last_update_time)
        values (#{name},#{age},#{sex},#{phone_number},#{create_time},#{last_update_time});

    </insert>

    <update id="updateUser" parameterType="com.course.model.User">
        update t_user set name=#{name} , age = #{age} , sex = #{sex} ,phone_number = #{phone_number}
         where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="Integer">
        delete from t_user where id = #{id};
    </delete>
</mapper>